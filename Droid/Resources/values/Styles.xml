<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!--title style-->
	<style name="RBstyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:button">@null</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:padding">5dp</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@drawable/btn_bottomtext_selector</item>
	</style>
	<style name="placeholder">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="subtitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">20dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@android:color/holo_blue_bright</item>
		<item name="android:shadowColor">@color/trans_white2</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">6</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:gravity">center_horizontal</item>
	</style>
	<style name="NextStyle">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/btn_green_selector</item>
		<item name="android:text">NEXT</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">22.0sp</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:layout_weight">1</item>
		<item name="android:drawableRight">@mipmap/next</item>
	</style>
	<style name="PreviousStyle">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/btn_green_selector</item>
		<item name="android:text">PREVIOUS</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">22.0sp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:drawableLeft">@mipmap/previous</item>
	</style>
	<style name="TitleStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:background">#8866ff00</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">22sp</item>
	</style>
	<style name="MyHorizontalProgressBar" parent="android:Widget.ProgressBar.Horizontal">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
		<item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
		<item name="android:minHeight">20dip</item>
		<item name="android:maxHeight">20dip</item>
		<item name="android:mirrorForRtl">true</item>
	</style>
</resources>